# Backend Environment Variables for DigitalOcean App Platform
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=production

# Frontend URL (change for production - will be set by App Platform)
FRONTEND_URL=https://your-app-name.ondigitalocean.app

# Clerk Authentication
CLERK_SECRET_KEY=sk_live_your_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_live_your_publishable_key_here

# Python Path (for OEMER)
PYTHON_PATH=python3

# Logging Configuration
LOG_LEVEL=info

# File upload limits
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# CORS origins (App Platform will handle this)
CORS_ORIGIN=https://your-app-name.ondigitalocean.app

# Optional: Redis for caching (if using App Platform managed Redis)
# REDIS_URL=redis://your-redis-instance:25061

# Optional: Database (if needed in future)
# DATABASE_URL=your_database_url
